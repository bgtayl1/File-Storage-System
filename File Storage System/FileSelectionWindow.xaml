<!-- FileSelectionWindow.xaml -->
<!-- This window allows the user to select a file to print from a list. -->
<Window x:Class="FileFlow.FileSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Tool Sheet to Print" Height="300" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="FileListBox" 
                 Grid.Row="0" 
                 ItemsSource="{Binding FileNames}"
                 MouseDoubleClick="FileListBox_MouseDoubleClick"
                 Background="{DynamicResource CardBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Print" Click="PrintButton_Click" Style="{DynamicResource ModernButton}" MinWidth="80"/>
            <Button Content="Cancel" Click="CancelButton_Click" Style="{DynamicResource ModernButton}" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>

