<!-- MainWindow.xaml -->
<!-- This view has been updated with a corrected layout for the top bar. -->
<Window x:Class="FileFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileFlow"
        mc:Ignorable="d"
        Title="Lakeview Precision Machining" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Grid.Column="0" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="Lakeview Precision Machining" FontSize="18" FontWeight="Bold" Margin="20,25,20,20" Foreground="{DynamicResource ForegroundBrush}" TextWrapping="Wrap"/>
                <RadioButton x:Name="DashboardButton" Content="Dashboard" Style="{DynamicResource NavButton}" IsChecked="True" Click="NavButton_Click"/>
                <RadioButton x:Name="ProjectsButton" Content="Projects" Style="{DynamicResource NavButton}" Click="NavButton_Click"/>
                <RadioButton x:Name="TeamsButton" Content="Teams" Style="{DynamicResource NavButton}" Click="NavButton_Click"/>
                <RadioButton x:Name="SettingsButton" Content="Settings" Style="{DynamicResource NavButton}" Margin="10,150,10,5" Click="NavButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Area Layout Grid -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Row for the top bar -->
                <RowDefinition Height="*"/>
                <!-- Row for the main content -->
            </Grid.RowDefinitions>

            <!-- Top Bar for Dark Mode -->
            <Border Grid.Row="0" 
                    Height="120"
                    Background="{DynamicResource CardBackgroundBrush}" 
                    Visibility="{DynamicResource TopBarVisibility}"/>

            <!-- Main Content Area -->
            <ContentControl Grid.Row="1" x:Name="MainContent"/>

            <!-- Logo is now outside the border and will always be visible -->
            <Image Source="pack://application:,,,/logo.bmp" 
                   Grid.Row="0"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center" 
                   Margin="0,0,30,0"
                   MaxHeight="80"/>

        </Grid>

    </Grid>
</Window>