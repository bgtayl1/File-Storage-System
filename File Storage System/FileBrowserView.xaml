<!-- FileBrowserView.xaml -->
<!-- This view has been updated to support sorting and type-to-select. -->
<UserControl x:Class="FileFlow.FileBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileFlow"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000"
             Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="40,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Back Button and Current Path -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="&lt; Back" Command="{Binding GoBackCommand}" Style="{DynamicResource ModernButton}" Padding="15,8" MinWidth="90"/>
            <Button Content="Print PRO+CON" Command="{Binding PrintProConCommand}" Style="{DynamicResource ModernButton}" Margin="10,0,0,0"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Width="250" Margin="10,0,0,0" VerticalContentAlignment="Center"/>
            <TextBlock Text="{Binding CurrentPath, Mode=OneWay}" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Summary Cards for the current folder -->
        <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,0,20">
            <Border Style="{DynamicResource SummaryCard}" Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="Subfolders" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding TotalFolders, Mode=OneWay}" FontSize="36" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            <Border Style="{DynamicResource SummaryCard}" Margin="15,0">
                <StackPanel>
                    <TextBlock Text="Total Files" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding TotalFiles, Mode=OneWay}" FontSize="36" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            <Border Style="{DynamicResource SummaryCard}" Margin="15,0,0,0">
                <StackPanel>
                    <TextBlock Text="Folder Size" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock FontSize="36" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}" Margin="0,5,0,0">
                        <Run Text="{Binding StorageUsedGB, Mode=OneWay, StringFormat={}{0:F3}}"/><Run Text=" GB"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- List of Files and Folders -->
        <Grid Grid.Row="2">
            <ListView ItemsSource="{Binding ItemsView}" 
                      MouseDoubleClick="ItemsListView_MouseDoubleClick"
                      IsTextSearchEnabled="True"
                      TextSearch.TextPath="FileName"
                      Background="{DynamicResource CardBackgroundBrush}"
                      BorderBrush="{DynamicResource BorderBrush}">
                <ListView.View>
                    <GridView>
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{DynamicResource MutedForegroundBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <EventSetter Event="Click" Handler="GridViewColumnHeader_Click"/>
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn Header="Name" Width="550">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding IsFolder, Converter={StaticResource BoolToIconConverter}}" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding FileName}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="100"/>
                        <GridViewColumn Header="Last Modified" DisplayMemberBinding="{Binding LastModified}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <TextBlock Text="{Binding StatusMessage}" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="16" 
                       Foreground="{DynamicResource MutedForegroundBrush}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding StatusMessage, TargetNullValue=''}" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding StatusMessage}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>