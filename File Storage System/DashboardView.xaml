<UserControl x:Class="FileFlow.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FileFlow"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1000"

             Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="40,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Welcome Back" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}"/>

        <UniformGrid Grid.Row="1" Columns="3" Margin="0,30,0,30">

            <Border Style="{DynamicResource SummaryCard}" Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="Total Projects" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding TotalProjects, Mode=OneWay}" FontSize="36" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}" Margin="0,5,0,0"/>
                </StackPanel>

            </Border>
            <Border Style="{DynamicResource SummaryCard}" Margin="15,0">
                <StackPanel>
                    <TextBlock Text="Files Managed" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding FilesManaged, Mode=OneWay}" FontSize="36" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}" Margin="0,5,0,0"/>

                </StackPanel>
            </Border>
            <Border Style="{DynamicResource SummaryCard}" Margin="15,0,0,0">
                <StackPanel>
                    <TextBlock Text="Storage Used" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock FontSize="36" FontWeight="Bold" Foreground="{DynamicResource
ForegroundBrush}" Margin="0,5,0,0">
                        <Run Text="{Binding StorageUsedGB, Mode=OneWay, StringFormat={}{0:F3}}"/><Run Text=" GB"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </UniformGrid>

        <Grid Grid.Row="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">

                <TextBox Width="300" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Text="Results" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="{DynamicResource ForegroundBrush}"/>

            <ListView ItemsSource="{Binding DisplayedResults}"
                      Grid.Row="2"
                      Background="{DynamicResource CardBackgroundBrush}"

                      BorderBrush="{DynamicResource BorderBrush}"
                      HorizontalContentAlignment="Stretch"
                      IsTextSearchEnabled="True"
                      TextSearch.TextPath="DisplayName"

                      MouseDoubleClick="ProjectsListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridView.ColumnHeaderContainerStyle>
                            <Style
TargetType="GridViewColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{DynamicResource MutedForegroundBrush}"/>

                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>

                        <GridViewColumn Header="RESULT" Width="300">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>

                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ProjectCode}" Foreground="{DynamicResource MutedForegroundBrush}" FontSize="12"/>

                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>

                        </GridViewColumn>
                        <GridViewColumn Header="TYPE" DisplayMemberBinding="{Binding Type}" Width="200"/>
                        <GridViewColumn Header="LAST MODIFIED" DisplayMemberBinding="{Binding LastModified}" Width="150"/>
                    </GridView>

                </ListView.View>
            </ListView>

            <Grid Grid.Row="2">
                <TextBlock Text="Searching..."
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"

                           FontSize="16"
                           Foreground="{DynamicResource MutedForegroundBrush}">
                    <TextBlock.Style>

                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSearching}" Value="True">

                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>

                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="{Binding StatusMessage}"
                           HorizontalAlignment="Center"

                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="{DynamicResource MutedForegroundBrush}">

                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>

                                <DataTrigger Binding="{Binding StatusMessage, TargetNullValue=''}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>

                                <DataTrigger Binding="{Binding StatusMessage}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>

                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

        </Grid>
    </Grid>
</UserControl>
